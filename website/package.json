{
  "name": "chic-lang-com",
  "private": true,
  "version": "0.1.0",
  "description": "chic-lang.com website (Next.js App Router)",
  "license": "Apache-2.0",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build && node scripts/prepare-standalone.mjs",
    "start": "node scripts/prepare-standalone.mjs && node .next/standalone/website/server.js",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --fix",
    "typecheck": "rm -rf .next/types .next/dev/types && tsc --noEmit",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "test:e2e": "npm run build && playwright test",
    "test:e2e:ui": "npm run build && playwright test --ui"
  },
  "dependencies": {
    "@mdx-js/mdx": "^3.1.1",
    "@mdx-js/react": "^3.1.1",
    "@swc/helpers": "^0.5.18",
    "gray-matter": "^4.0.3",
    "next": "^16.1.4",
    "next-intl": "^4.7.0",
    "next-mdx-remote": "^5.0.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.3",
    "react-markdown": "^10.1.0",
    "rehype-highlight": "^7.0.2",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.9.0",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^25.0.9",
    "@types/jest-axe": "^3.5.9",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.17",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.4",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "jest-axe": "^10.0.0",
    "jsdom": "^27.4.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  }
}
